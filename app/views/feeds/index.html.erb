<h1>Public Feeds</h1>

<table>
  <tr>
    <th>Title</th>
  </tr>

<% @published_feeds.each do |feed| %>
  <tr>
    <td><%=h feed.title %></td>
    <td><%= link_to 'Headlines', :action => 'titles', :id => feed %></td>
  </tr>
<% end %>
</table>

<h1>My feeds</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Uri</th>
    <th>Title xpath</th>
    <th>Published</th>
  </tr>

<% @feeds.each do |feed| %>
  <tr>
    <td><%=h feed.title %></td>
    <td><%=h feed.uri %></td>
    <td><%=h feed.title_xpath %></td>
    <td><%=h feed.published %></td>
    <td><%= link_to 'Show', feed %></td>
    <td><%= link_to 'Headlines', :action => 'titles', :id => feed %></td>
    <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
    <td><%= link_to 'Destroy', feed, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New feed', new_feed_path %>

